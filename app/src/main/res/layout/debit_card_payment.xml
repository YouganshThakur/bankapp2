<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Debit Card"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="17sp"
        android:id="@+id/debitHeading"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card No."
        android:textColor="#000000"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@+id/debitHeading"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="16dp"
        android:id="@+id/cardNoHeading"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardNoHeading"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/cardNoEditText"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Month"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/cardNoEditText"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="17sp"
        android:layout_margin="16dp"
        android:id="@+id/monthTextView"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/cardNoEditText"
        app:layout_constraintLeft_toRightOf="@+id/monthTextView"
        android:textSize="17sp"
        android:layout_margin="16dp"
        android:id="@+id/yearTextView"/>

    <Spinner
        android:id="@+id/monthSpinner"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="@id/monthTextView"
        app:layout_constraintRight_toRightOf="@id/monthTextView"
        app:layout_constraintTop_toBottomOf="@id/monthTextView"
        />
    <Spinner
        android:id="@+id/yearpinner"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="@id/yearTextView"
        app:layout_constraintRight_toRightOf="@id/yearTextView"
        app:layout_constraintTop_toBottomOf="@id/yearTextView"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CVV"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/monthSpinner"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="17sp"
        android:layout_margin="16dp"
        android:id="@+id/cvvTextView"/>
    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="@id/cvvTextView"
        app:layout_constraintTop_toBottomOf="@+id/cvvTextView"
        android:id="@+id/cvvEditText"/>
    <TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="If your card does not have Expiry Date/CVV, skip these fields"
    app:layout_constraintTop_toBottomOf="@+id/cvvEditText"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    app:layout_constraintRight_toRightOf="parent"
    android:textSize="16sp"


    android:id="@+id/extraText"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Pay now"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/extraText"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:background="@drawable/add_money_button"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:id="@+id/walletPaynow"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp" />
</android.support.constraint.ConstraintLayout>